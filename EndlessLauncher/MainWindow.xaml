<Window x:Class="EndlessLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndlessLauncher"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        Height="600" Width="1000" Loaded="Window_Loaded" Title="Endless Launcher">
    <Window.Background>
        <ImageBrush ImageSource="Resources/DefaultBackground.png"/>
    </Window.Background>

    <Window.Resources>
        <!-- Custom Button, used to add hover images -->
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                        BorderThickness="0" 
                        Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border"
                                        Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}">

                                    <!-- Uses BorderBrush as the hover image
                                    so we don't need to add a new property.
                                    (BorderBrush isn't used as there is no border)-->
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Image x:Name="HeaderBar"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="184"
               Width="1000"
               Source="Resources/HeaderBar.png"
               MouseDown="HeaderBar_MouseDown"
               RenderOptions.BitmapScalingMode="NearestNeighbor"/>

        <Button x:Name="Minimize"
                Content=""
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,50,0"
                Height="40"
                Width="50"
                BorderThickness="0" SnapsToDevicePixels="True" Click="Minimize_Click">
            <Button.BorderBrush>
                <ImageBrush ImageSource="Resources/Minimize_Hover.png"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="Resources/Minimize.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="CloseButton"
                Content=""
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,0,0"
                Height="40"
                Width="50"
                BorderThickness="0" SnapsToDevicePixels="True" Click="CloseButton_Click">
            <Button.BorderBrush>
                <ImageBrush ImageSource="Resources/Close_Hover.png"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="Resources/Close.png"/>
            </Button.Background>
        </Button>
        <Label Content="Endless Launcher" HorizontalAlignment="Left" Margin="10,15,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="14" Foreground="White" Padding="0"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="20,50,0,0" VerticalAlignment="Top" Width="100" Source="Resources/DefaultHead.png"/>
        <Label Content="Hello, gundamMC." HorizontalAlignment="Left" Margin="140,55,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="24" Foreground="White" Padding="0" FontWeight="Bold"/>
        <Label Content="Connected to Mojang Servers." HorizontalAlignment="Left" Margin="140,99,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" Padding="0" FontWeight="Light"/>
        <Label Content="UUID: XXXX-XXXX-XXXX-XXXX" HorizontalAlignment="Left" Margin="140,131,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" Padding="0" FontWeight="Light" FontSize="8"/>
        <Label Content="Selected version" HorizontalAlignment="Right" Margin="0,47,30,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" FontSize="14" Foreground="White" Padding="0" FontWeight="Bold" HorizontalContentAlignment="Right"/>
        <Label Content="1.12 - Forge" HorizontalAlignment="Right" Margin="0,71,30,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Foreground="White" Padding="0" HorizontalContentAlignment="Right"/>
        <Button x:Name="StartGame"
            Content="Start Game"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,100,20,0"
            Height="50"
            Width="200"
            BorderThickness="0" SnapsToDevicePixels="True" FontFamily="Microsoft YaHei UI" FontSize="18" FontWeight="Bold">
            <Button.BorderBrush>
                <ImageBrush ImageSource="Resources/StartGame_Hover.png"/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush ImageSource="Resources/StartGame.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
